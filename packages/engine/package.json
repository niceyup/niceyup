    "@workspace/ai": "workspace:*",
    "@workspace/db": "workspace:*",
    "@workspace/env": "workspace:*",
    "@workspace/storage": "workspace:*",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@workspace/tsconfig": "workspace:*",
    "typescript": "^5.7.3"
